{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: icpx -fsycl build active file",
            "command": "icpx",
            "args": [
                "-fsycl",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Intel oneAPI SYCL task using icpx."
        }
    ],
    "version": "2.0.0"
}
